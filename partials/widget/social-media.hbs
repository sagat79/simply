<div class="js-social-media social-media{{#if class}} {{class}}{{/if}}">
    <a class="godo-tracking p-2 inline-block hover:opacity-70"
        data-event-category="Header"
        data-event-action="Social"
        data-event-label="[matrix]"
        data-event-non-interaction="true"
        title="[matrix] @pavel:dimov.xyz"
        aria-label="[matrix] @pavel:dimov.xyz"
        href="https://l.dimov.xyz/matrix"
        target="_blank"
        rel="noopener noreferrer">
        <svg class="icon icon--matrix"><use xlink:href="#icon-matrix"></use></svg>
    </a>

    <a class="godo-tracking p-2 inline-block hover:opacity-70"
        data-event-category="Header"
        data-event-action="Social"
        data-event-label="Linkedin"
        data-event-non-interaction="true"
        title="Linkedin @dimovpavel"
        aria-label="Linkedin @dimovpavel"
        href="https://l.dimov.xyz/linkedin"
        target="_blank"
        rel="noopener noreferrer">
        <svg class="icon icon--linkedin"><use xlink:href="#icon-linkedin"></use></svg>
    </a>

    {{#if @site.facebook}}
    <a class="godo-tracking p-2 inline-block hover:opacity-70"
        data-event-category="Header"
        data-event-action="Social"
        data-event-label="Facebook"
        data-event-non-interaction="true"
        title="Facebook {{@site.facebook}}"
        aria-label="Facebook {{@site.facebook}}"
        href="{{facebook_url}}"
        target="_blank"
        rel="noopener noreferrer">
        <svg class="icon icon--facebook"><use xlink:href="#icon-facebook"></use></svg>
    </a>
    {{/if}}

    {{#if @site.twitter}}
    <a class="godo-tracking p-2 inline-block hover:opacity-70"
        data-event-category="Header"
        data-event-action="Social"
        data-event-label="Twitter"
        data-event-non-interaction="true"
        title="Twitter {{@site.twitter}}"
        aria-label="Twitter {{@site.twitter}}"
        href="{{twitter_url}}"
        target="_blank"
        rel="noopener noreferrer">
        <svg class="icon icon--twitter"><use xlink:href="#icon-twitter"></use></svg>
    </a>
    {{/if}}

    <a class="godo-tracking p-2 inline-block hover:opacity-70"
        data-event-category="Header"
        data-event-action="Social"
        data-event-label="DIMOV Code"
        data-event-non-interaction="true"
        title="DIMOV Code"
        aria-label="DIMOV Code"
        href="https://l.dimov.xyz/code"
        target="_blank"
        rel="noopener noreferrer">
        <svg class="icon icon--code"><use xlink:href="#icon-code"></use></svg>
    </a>

    <a class="godo-tracking p-2 inline-block hover:opacity-70"
        data-event-category="Header"
        data-event-action="Social"
        data-event-label="RSS"
        data-event-non-interaction="true"
        title="RSS {{@site.title}}"
        aria-label="RSS {{@site.title}}"
        href="https://www.dimov.xyz/rss"
        target="_blank"
        rel="noopener noreferrer">
        <svg class="icon icon--rss"><use xlink:href="#icon-rss"></use></svg>
    </a>
</div>